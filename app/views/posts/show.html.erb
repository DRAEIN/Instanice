<%= render 'navbar' %>

<%= render 'post', post: @post %>
<% if @post.user.id == current_user.id %>
   <div class="text-center edit-links">
      <%= link_to "Edit", edit_post_path(@post) %>
      |
      <%= link_to "Cancel", posts_path %>
   </div>
   <% else %>
   <div class="text-center edit-links">
      <%= link_to "Go back", posts_path %>
   </div>
   <% end %>

